                              </Button>
                              <Button fx:id="btnLaporanTransaksiDetail" mnemonicParsing="false" onAction="#handleLaporanTransaksiDetail" prefHeight="40.0" prefWidth="350.0" styleClass="button" text="ðŸ“Š Laporan Transaksi Detail">
                              </Button>
                              <Button fx:id="btnLaporanOrder" mnemonicParsing="false" onAction="#handleLaporanOrder" prefHeight="40.0" prefWidth="350.0" styleClass="button" text="ðŸ“¦ Laporan Pesanan">
                              </Button>
                              <Button fx:id="btnLaporanOrderDetail" mnemonicParsing="false" onAction="#handleLaporanOrderDetail" prefHeight="40.0" prefWidth="350.0" styleClass="button" text="ðŸ“‹ Laporan Detail Pesanan">
                              </Button>
                              <Button fx:id="btnLaporanStokAlert" mnemonicParsing="false" onAction="#handleLaporanStokAlert" prefHeight="40.0" prefWidth="350.0" styleClass="button" text="âš ï¸ Alert Stok Menipis">
                              </Button>
                              
                              <!-- Analytical Reports -->
                              <Label style="-fx-font-weight: bold; -fx-text-fill: #10B981; -fx-padding: 20 0 0 0;" styleClass="section-label" text="LAPORAN ANALISIS">
                              </Label>
                              <Button fx:id="btnLaporanPenjualanMenu" mnemonicParsing="false" onAction="#handleLaporanPenjualanMenu" prefHeight="40.0" prefWidth="350.0" styleClass="button" text="ðŸ“ˆ Laporan Penjualan per Menu">
                              </Button>
                              <Button fx:id="btnLaporanPelangganSetia" mnemonicParsing="false" onAction="#handleLaporanPelangganSetia" prefHeight="40.0" prefWidth="350.0" styleClass="button" text="â­ Laporan Pelanggan Setia">
                              </Button>
                              <Button fx:id="btnLaporanPendapatan" mnemonicParsing="false" onAction="#handleLaporanPendapatan" prefHeight="40.0" prefWidth="350.0" styleClass="button" text="ðŸ’° Laporan Pendapatan Harian">
                              </Button>
                           </children>
                        </VBox>
                     </content>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </ScrollPane>
               </children>
               <StackPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </StackPane.margin>
            </VBox>

            <!-- Report Container (Hidden by default) -->
            <BorderPane fx:id="reportContainer" style="-fx-background-color: white;" visible="false">
               <top>
                  <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #F3F4F6; -fx-padding: 10; -fx-border-color: #E5E7EB; -fx-border-width: 0 0 1 0;">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleBackToMenu" styleClass="button" text="Kembali ke Menu">
                        </Button>
                        <javafx.scene.layout.Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnExportPdf" mnemonicParsing="false" onAction="#handleExportPdf" styleClass="button" text="ðŸ“¥ Export ke PDF">
                        </Button>
                     </children>
