<AnchorPane styleClass="root" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="id.syafira.dapoer.controller.LaporanController">
   <children>
      <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Menu Container -->
            <VBox fx:id="menuContainer" alignment="TOP_CENTER" spacing="20.0" styleClass="content-card">
