<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" styleClass="root" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="id.syafira.dapoer.controller.UserController">
   <children>
      <GridPane alignment="CENTER" hgap="5.0" styleClass="content-card" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" maxWidth="150.0" minWidth="100.0" percentWidth="0.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" prefWidth="344.79996337890617" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
         </rowConstraints>
         <children>
            <Label fx:id="idLabel" alignment="CENTER" text="Kode User">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </Label>
            <Label fx:id="usernameLabel" alignment="CENTER" text="Username" GridPane.rowIndex="1">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </Label>
            <Label fx:id="passwordLabel" alignment="CENTER" text="Password" GridPane.rowIndex="2">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </Label>
            <Label fx:id="nameLabel" alignment="CENTER" text="Nama" GridPane.rowIndex="3">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </Label>
            <Label fx:id="levelLabel" alignment="CENTER" text="Level User" GridPane.rowIndex="4">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </Label>
            <TextField fx:id="idField" focusTraversable="false" GridPane.columnIndex="1">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="usernameField" focusTraversable="false" promptText="Masukan username" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="passwordField" focusTraversable="false" promptText="Masukan password" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="nameField" focusTraversable="false" promptText="Masukan nama" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </TextField>
            <ComboBox fx:id="levelComboBox" focusTraversable="false" promptText="Pilih ID Level" visibleRowCount="5" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         </children>
      </GridPane>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="newBtn" focusTraversable="false" minWidth="70.0" mnemonicParsing="false" onAction="#handleNew" styleClass="button" text="New">
            </Button>
            <Button fx:id="saveBtn" focusTraversable="false" minWidth="70.0" mnemonicParsing="false" onAction="#handleSave" styleClass="button" text="Save">
            </Button>
            <Button fx:id="updateBtn" focusTraversable="false" minWidth="70.0" mnemonicParsing="false" onAction="#handleUpdate" styleClass="button" text="Update">
            </Button>
            <Button fx:id="deleteBtn" focusTraversable="false" minWidth="70.0" mnemonicParsing="false" onAction="#handleDelete" styleClass="button-danger" text="Delete">
            </Button>
            <Button fx:id="editBtn" focusTraversable="false" minWidth="70.0" mnemonicParsing="false" onAction="#handleEdit" styleClass="button-secondary" text="Edit">
            </Button>
         </children>
      </HBox>
      <TableView fx:id="userTable" focusTraversable="false" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="idColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="108.80001866817474" text="ID User" />
            <TableColumn fx:id="usernameColumn" minWidth="-1.0" prefWidth="143.19998168945312" text="Username" />
            <TableColumn fx:id="passwordColumn" minWidth="-1.0" prefWidth="169.5999755859375" text="Password" />
            <TableColumn fx:id="nameColumn" minWidth="-1.0" prefWidth="191.99993896484375" text="Nama User" />
            <TableColumn fx:id="levelColumn" minWidth="-1.0" prefWidth="108.80006103515632" text="ID Level" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
