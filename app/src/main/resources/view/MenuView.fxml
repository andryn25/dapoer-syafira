<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" styleClass="root" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="id.syafira.dapoer.controller.MenuItemController">
   <children>
      <GridPane alignment="CENTER" hgap="10.0" styleClass="content-card" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" maxWidth="150.0" minWidth="100.0" percentWidth="0.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" prefWidth="344.79996337890617" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
         </rowConstraints>
         <children>
            <Label fx:id="idLabel" alignment="CENTER" text="Kode Masakan">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </Label>
            <Label fx:id="usernameLabel" alignment="CENTER" text="Nama Masakan" GridPane.rowIndex="1">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </Label>
            <Label fx:id="passwordLabel" alignment="CENTER" text="Harga" GridPane.rowIndex="2">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </Label>
            <Label fx:id="nameLabel" alignment="CENTER" text="Status Masakan" GridPane.rowIndex="3">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </Label>
            <Label fx:id="levelLabel" alignment="CENTER" text="Stok" GridPane.rowIndex="4">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </Label>
            <TextField fx:id="idField" focusTraversable="false" GridPane.columnIndex="1">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="namaField" focusTraversable="false" promptText="Masukan nama masakan" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="hargaField" focusTraversable="false" promptText="Masukan harga" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <font>
                  <Font name="Noto Sans Regular" size="15.0" />
               </font>
            </TextField>
            <Spinner fx:id="stokSpinner" editable="true" maxHeight="1.7976931348623157E308" maxWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <ComboBox fx:id="statusCombo" maxHeight="1.7976931348623157E308" maxWidth="150.0" promptText="Pilih Status" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="newBtn" focusTraversable="false" minWidth="70.0" mnemonicParsing="false" onAction="#handleNew" styleClass="button" text="New">
            </Button>
            <Button fx:id="saveBtn" focusTraversable="false" minWidth="70.0" mnemonicParsing="false" onAction="#handleSave" styleClass="button" text="Save">
            </Button>
            <Button fx:id="updateBtn" focusTraversable="false" minWidth="70.0" mnemonicParsing="false" onAction="#handleUpdate" styleClass="button" text="Update">
            </Button>
            <Button fx:id="deleteBtn" focusTraversable="false" minWidth="70.0" mnemonicParsing="false" onAction="#handleDelete" styleClass="button-danger" text="Delete">
            </Button>
            <Button fx:id="editBtn" focusTraversable="false" minWidth="70.0" mnemonicParsing="false" onAction="#handleEdit" styleClass="button-secondary" text="Edit">
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <TableView fx:id="menuTable" focusTraversable="false" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="idColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="108.80001866817474" text="ID Masakan" />
            <TableColumn fx:id="namaColumn" minWidth="-1.0" prefWidth="143.19998168945312" text="Nama Masakan" />
            <TableColumn fx:id="hargaColumn" minWidth="-1.0" prefWidth="169.5999755859375" text="Harga" />
            <TableColumn fx:id="statusColumn" minWidth="-1.0" prefWidth="191.99993896484375" text="Status Masakan" />
            <TableColumn fx:id="stokColumn" minWidth="-1.0" prefWidth="108.80006103515632" text="Stok" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
