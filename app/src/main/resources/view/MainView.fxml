<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="mainStack" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="id.syafira.dapoer.controller.MainController">
    <BorderPane fx:id="root" styleClass="root">
        <!-- Header Atas -->
        <top>
            <HBox alignment="CENTER_LEFT" spacing="16" styleClass="top-header">
                <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                     <image>
                        <Image url="@../images/logo_icon.png" />
                     </image>
                </ImageView>
                <VBox fx:id="menuGreatings" style="-fx-cursor: hand;">
                    <Label style="-fx-font-size: 20px;" styleClass="header-label" text="Dapoer Syafira" />
                    <Label style="-fx-font-size: 12px;" styleClass="text-muted" text="Point of Sales System" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER_RIGHT" spacing="15">
                     <!-- User Profile Section -->
                     <VBox alignment="CENTER_RIGHT" spacing="2">
                        <Label fx:id="lblCurrentUser" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 14px;" text="Admin User" />
                        <Label fx:id="lblUserType" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 11px;" text="Administrator" />
                     </VBox>
                     <Button fx:id="btnLogoutHeader" onAction="#handleLogout" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 1; -fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 6 16;" styleClass="button-secondary" text="Logout" />
                </HBox>
            </HBox>
        </top>

        <!-- Sidebar Kiri -->
        <left>
            <VBox fx:id="sidebarVBox" spacing="8" styleClass="sidebar">
                <padding>
                    <Insets bottom="20" left="10" right="10" top="20" />
                </padding>
                
                <!-- Dynamic menu items will be injected here -->

                <Region fx:id="region_owner" VBox.vgrow="ALWAYS" />
                
            </VBox>
        </left>
    </BorderPane>

    <!-- Overlay Layer for Custom Dialog -->
    <VBox fx:id="overlayLayer" alignment="CENTER" styleClass="overlay-container" visible="false">
        <VBox alignment="CENTER" spacing="20" styleClass="dialog-card">
            <VBox alignment="CENTER" spacing="8">
                <Label fx:id="lblOverlayTitle" styleClass="sub-header-label" text="Konfirmasi" />
                <Label fx:id="lblOverlayMessage" alignment="CENTER" styleClass="text-muted" text="Apakah Anda yakin?" wrapText="true" />
            </VBox>
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="btnOverlayCancel" onAction="#handleOverlayCancel" prefWidth="100" styleClass="button-secondary" text="Batal" />
                <Button fx:id="btnOverlayConfirm" onAction="#handleOverlayConfirm" prefWidth="100" styleClass="button" text="Ya" />
            </HBox>
        </VBox>
    </VBox>
</StackPane>
